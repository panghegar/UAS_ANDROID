<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AdminAddFilmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="6dp"
            android:background="@color/blueprim"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_arrow_back_ios_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Movie"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:paddingLeft="110dp"
                android:paddingTop="3dp"
                android:textSize="22sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:hint="Title"
                android:inputType="text"
                android:paddingLeft="20sp"
                android:background="@drawable/rounded2"
                android:fontFamily="@font/poppins_semibold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Director :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/txt_director"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="Director"
                android:paddingLeft="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/rounded2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durasi :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/txt_durasi"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="Durasi"
                android:paddingLeft="20sp"
                android:background="@drawable/rounded2"
                android:fontFamily="@font/poppins_semibold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/txt_rating"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="Rating"
                android:paddingLeft="20sp"
                android:background="@drawable/rounded2"
                android:fontFamily="@font/poppins_semibold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopsis :"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/txt_sinopsis"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/rounded2"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Sinopsis"
                android:inputType="text"
                android:paddingLeft="20sp"
                android:textSize="14sp" />



            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/blueprim"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>